@model List<Genre>
@{
    ViewData["Title"] = "Index";
}

<br />
<h1 class="offset-2">Index</h1>
<hr />
<br />

<table class="offset-2">
    <thead>
        <tr>
            <th>Title</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count != 0)
        {

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>
                        <partial name="_EDDButtons" />
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td><p>There's no Genres available.</p></td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateGenre" asp-controller="Genre" class="btn btn-success">Create new Genre</a>